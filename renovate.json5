{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":disableRateLimiting",
    ":ignoreUnstable",
    "security:openssf-scorecard",
    "helpers:pinGitHubActionDigestsToSemver",
  ],
  minimumReleaseAge: "5 days",
  configMigration: true,
  commitMessageExtra: "( {{currentVersion}} â†’ {{newVersion}} )",
  packageRules: [
    {
      description: "GitHub Actions",
      matchManagers: ["github-actions"],
      commitMessagePrefix: "ci(deps):",
      commitMessageTopic: "action {{depName}}",
    },
    {
      description: "Add changelog URLs for GitHub Actions digest updates",
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["digest"],
      prBodyNotes: ["Changelog: {{{changelogUrl}}}"],
    },
  ],
}
